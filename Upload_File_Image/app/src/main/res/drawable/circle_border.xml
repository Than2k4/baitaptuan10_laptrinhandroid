<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền ngoài (màu đen, to hơn) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- Màu đen -->
        </shape>
    </item>

    <!-- Lớp màu trắng bên trong (viền rộng hơn do giảm inset) -->
    <item android:insetLeft="20dp" android:insetTop="20dp"
        android:insetRight="20dp" android:insetBottom="20dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu trắng -->
        </shape>

    </item>

</layer-list>