<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Viền ngoài (màu đen) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- Màu đen -->
            <size android:width="130dp" android:height="130dp"/> <!-- Kích thước viền -->
        </shape>
    </item>

    <!-- Lớp màu trắng bên trong (nhỏ hơn một chút để tạo hiệu ứng viền) -->
    <item android:width="120dp" android:height="120dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/> <!-- Màu trắng -->
        </shape>
    </item>

</layer-list>
